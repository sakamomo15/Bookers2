<%= render 'users/userinfo', user: @user %>

<%= render 'newbook', book: @book %>

<h1>Book detail</h1>

<div>
  <%= image_tag @user.get_profile_image %>
  <%= link_to "#{@user.name}", user_path(@user.id) %>
</div>
<%= link_to "#{@book_detail.title}", book_path(@book_detail.id) %>
<%= @book_detail.opinion %>

<% if @book_detail.user == current_user %>
  <%= link_to "Edit", edit_book_path(@book_detail.id) %>
  <%= link_to "Destroy", book_path(@book_detail), method: :delete %><!--book_path(@book_detail.id)では？？-->
<% end %>
