<h2 class="mt-3">New book</h2>
  
<%= form_with model: book do |f| %>
  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
      
  <div class="form-group">
    <div>Opinion</div>
    <%= f.text_area :opinion %>
  </div>
  
  <div class="form-group">
    <%= f.submit 'Create Book', class: "btn btn-success"; %>
  </div>
<% end %>
